@model List<quanlisieuthimn.Models.OrderItem>

<table class="table">
    <thead>
        <tr>
            <th>Hàng hóa</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Không có sản phẩm nào trong đơn hàng.</td>
            </tr>
        }
    </tbody>
</table>
