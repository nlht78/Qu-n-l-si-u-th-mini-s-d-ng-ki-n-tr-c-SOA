@page
@model quanlisieuthimn.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Tạo đơn hàng mới";
}

<h2>Tạo đơn hàng mới</h2>

<form method="post">
    <div class="form-group">
        <label for="CustomerName">Tên khách hàng</label>
        <input type="text" class="form-control" id="CustomerName" name="CustomerName" required />
    </div>
    <div class="form-group">
        <label for="CustomerEmail">Email (không bắt buộc)</label>
        <input type="text" class="form-control" id="CustomerEmail" name="CustomerEmail" />
    </div>
    <button type="submit" class="btn btn-primary">Tạo</button>
    <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
</form>

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        Có lỗi trong dữ liệu. Vui lòng kiểm tra lại.
    </div>
}


